        <span asp-validation-for = "LastName"></span>
        <label asp-for = "LastName"></label>
        <input type = "text" name = "LastName">
        <span>Age: </span>
        <span asp-validation-for = "Age"></span>
        <label asp-for = "Age"></label>
        <input type = "number" name = "Age">
